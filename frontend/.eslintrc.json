{
  "env": {
    "browser": true,
    "es6": true
  },

  "extends": ["eslint:recommended", "plugin:react/recommended"],

  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },

  "settings": {
    "react": {
      "version": "detect"
    }
  },

  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/prop-types": "off",
    "no-console": 0
  },
  "overrides": [
    {
      "files": ["**/*.test.js", "**/*.spec.jsx"],
      "env": {
        "jest": true
      }
    }
  ]
}
